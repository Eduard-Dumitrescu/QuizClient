
@{
    ViewBag.Title = "Tests";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Tests</h2>

<button type="button" class="btn btn-default">
    <span class="glyphicon glyphicon-th-list"></span>
</button>
<button type="button" class="btn btn-default">
    <span class="glyphicon glyphicon-plus"></span>
</button>

<br />
<br />

<form class="container-fluid" id="createTestContainer">

    <div class="row">

        <div class="col-lg-7 col-md-5 col-xs-10 col-sm-10">

            <div class="input-group">
                <span class="input-group-addon"> Test Name </span>
                <input type="text" data-bind="value: testNameInput" class="form-control" aria-describedby="basic-addon1" required>
            </div>

        </div>

        <div class="col-lg-5 col-md-3 col-xs-10 col-sm-10">
            <div class="input-group">
                <span class="input-group-addon"> Test Level </span>
                <select class="form-control" data-bind="options: difficultyList,optionsText: 'Name',value: selectedTestLevel"></select>
            </div>
        </div>

    </div>

    <br />

    <div class="row">
        <div class="col-lg-7 col-md-7 col-xs-10 col-sm-10">

            <div class="input-group">
                <span class="input-group-addon"> Test Duration </span>
                <span class="input-group-addon"> Hours </span>
                <input type="number" data-bind="value: hoursInput" class="form-control" aria-describedby="basic-addon1" min="0" required>
                <span class="input-group-addon"> Minutes </span>
                <input type="number" data-bind="value: minutesInput" class="form-control" aria-describedby="basic-addon1" min="0" max="60" required>
                <span class="input-group-addon"> Seconds </span>
                <input type="number" data-bind="value: secondsInput" class="form-control" aria-describedby="basic-addon1" min="0" max="60" required>
            </div>

        </div>
        
        <div class="col-lg-5 col-md-5 col-xs-10 col-sm-10">
            <div class="input-group">
                <span class="input-group-addon"> Number of questions per technology </span>
                <input type="number" data-bind="value: numberOfQuestions" class="form-control" aria-describedby="basic-addon1" min="1" required>
            </div>
        </div>

    </div>

    <br />



    <br />

    <div class="row">
        <div class="col-lg-7 col-md-5 col-xs-10 col-sm-10" data-bind="foreach: subjectList">
            <label class="checkbox-inline"><input type="checkbox" data-bind="checked: IsSelected"> <strong data-bind="text: Name"></strong> </label>
        </div>
    </div>

    
    <br/>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
            <button id="singlebutton" name="singlebutton" class="btn btn-primary" data-bind="click: $root.createTest"> Create Test </button>
        </div>
    </div>

    <div class="row" id="displayMessage">

        <div class="col-lg-offset-3 col-md-offset-3 col-sm-offset-2 col-xs-offset-2 col-lg-5 col-md-5 col-sm-8 col-xs-8">
            <div data-bind="css : $root.messageCssClass()">
                <strong data-bind="text: $root.alertMessage"> </strong>
            </div>
        </div>

    </div>

</form>

<script src="~/Scripts/KnockoutScripts/TestsViewModel.js"></script>